{% extends "financiallyResponsible/index.j2" %}

{% block title %}Кадастр{% endblock %}

{% block property %}

<div class="container mx-auto">

    <div class="w-full mb-[20px]">
        <button id="modal-kadastr-create" type="button"
            class="bg-green-700 text-white px-[10px] py-[5px] rounded-md">Добавить</button>
    </div>

    <table class="w-full">
        <thead class="border">
            <tr class="border">
                <th class="border text-left pl-[10px]">#</th>
                <th class="border text-left pl-[10px]">Улица</th>
                <th class="border text-left pl-[10px]">Номер дома</th>
                <th class="border text-left pl-[10px]">Год постройки</th>
            </tr>
        </thead>
        <tbody id="kadastr-table">
            {% for item in emu %}
            <tr class="border">
                <td class="border pl-[10px]">{{ item.id }}</td>
                <td class="border pl-[10px]">ул. {{ item.street }}</td>
                <td class="border pl-[10px]">д. {{ item.house }}</td>
                <td class="border pl-[10px]">{{ item.year }} г.</td>
                <td class="flex items-center justify-center">
                    <button type="button" data-delete="{{ item.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                    </button>
                    <button type="button" data-edit="{{ item.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                    </button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div id="modal-kadastr" class="w-full h-full fixed top-0 left-0 bg-gray-700/50 hidden">
    <div class="bg-white rounded w-[550px] p-[20px]" id="modal-kadastr-container">
        <form id="modal-kadastr-form">
            <div class="w-full flex flex-col space-y-4">
                <label for="id_kadastr">
                    <span>Номер</span>
                    <input type="number" min="1" max="999999999" class="w-full border-b" name="id_kadastr"
                        id="id_kadastr" placeholder="Номер записи" />
                </label>
                <label for="street">
                    <span>Улица</span>
                    <input type="text" class="w-full border-b" name="street" id="street" placeholder="Улица" />
                </label>
                <label for="house">
                    <span>Номер дома</span>
                    <input type="text" class="w-full border-b" name="house" id="house" placeholder="Номер дома" />
                </label>
                <label for="year">
                    <span>Год постройки</span>
                    <input type="number" min="1999" class="w-full border-b" name="year" id="year" placeholder="Год постройки" />
                </label>
            </div>
            <div class="w-full flex justify-end space-x-4 mt-[20px]">
                <button id="modal-kadastr-save" class="bg-green-700 text-white px-[10px] py-[5px] rounded-md">Сохранить</button>
                <button id="modal-kadastr-cancel" type="button" class="bg-red-700 text-white px-[10px] py-[5px] rounded-md">Отмена</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}